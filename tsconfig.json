{
    "compileOnSave": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictMetadataEmit": true,
        "target": "es5",
        "module": "es2015",
        "stripInternal": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "angularCompilerOptions": {
        "emitDecoratorMetadata": true
    }
}
